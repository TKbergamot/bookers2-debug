<tr>
  <td>
    <%= link_to (book_comment.user) do %>
    <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 34, 34, fallback: "no-image-mini.jpg") %>
    <%= book_comment.user.name %></td>
    <% end %>
  <td colspan="3"><%= book_comment.content %></td>
  <% if book_comment.user == current_user %>
  <td><%= link_to "Destroy",book_comment_path(book_comment), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book_comment.id}" %></td>
  <% end %>
</tr>
<% end %>

<tr>
  <td id="book-<%= book.id %>">
    <%= link_to(book.user) do %>
    <%= attachment_image_tag(book.user, :profile_image, :fill, 34, 34, fallback: "no-image-mini.jpg") %>
    <% end %>
  </td>
  <td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
  <td><%= book.body %></td>
  <%= render "users/favorites", book: book %>
  <td>
    Comments: <%= book.book_comments.count %>
  </td>
  <% if book.user == current_user %>
    <td><%= link_to "Edit",edit_book_path(book), class: "btn-sm btn-success edit_book_#{book.id}" %></td>
    <td><%= link_to "Destroy",book, method: :delete, data: {confirm: "Are you sure?"}, class: "btn-sm btn-danger destroy_book_#{book.id}" %></td>
  <% end %>
</tr>

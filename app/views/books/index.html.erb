<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>
		<h2>New book</h2>
		<%= render 'books/newform', book: Book.new %>
	</div>

	<div class="col-xs-9">
		<h2>Books index</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<tr>
					<%= render @books %>
				</tr>
			</tbody>
		</table>
	</div>
</div>

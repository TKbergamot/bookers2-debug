
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @book.user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: Book.new %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
				<%= render @book %>
				</tr>
			</table>

		<h2>Comments</h2>
	<table id="comment" class="table">
		<%= render @book_comments %>
	</table>

		<div class="form-group">
			<%= form_with url: book_comments_path(@book) do |f| %>
				<%= f.text_field :content, class:"form-control", id:"comment_field" %>
				<br>
				<%= f.submit 'コメントする' %>
			<% end %>
		</div>
	</div>
</div>
